@model IEnumerable<MSMA_Proyecto.Models.Cervezas>

@{
    ViewData["Title"] = "Index";
}

<h1>Cervezas</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Tamaño)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().AVC)
            </th>
            <th>
                Precio
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tamaño)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AVC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio) 
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IDCerveza">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IDCerveza">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IDCerveza">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
